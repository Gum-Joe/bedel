#!/usr/bin/env node
// Main script to run bedel
/**
 * Module depedencies
*/
require("nodejs-dashboard");
const Cli = require('../app/cli');
const commands = require('../app/cli/commands');

// Command line options parser
const cli = new Cli([
  [ '--color',  'Use colour'],
  [ '--no-color',  'Don\'t use colour']
], {}, process.argv);

// Usage
cli.usage('<command> [options]');

// Commands
cli.command(
  'server',
  'Runs the server',
  commands.server
);

// Parse
cli.parse();
