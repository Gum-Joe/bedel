#!/usr/bin/env node
// Main script to run bedel
/**
 * Module depedencies
*/
const app = require('../app');
const Cli = require('../app/cli');

// Command line options parser
const cli = new Cli([
  [ '-p, --port', 'Specifies a port to run on'],
  [ '--color',  'Use colour'],
  [ '--no-color',  'Don\'t use colour']
], {}, process.argv);
// Commands
cli.command(
  'server',
  [
    [ '-p, --port', 'Specifies a port to run on'],
    [ '-v, --debug', 'Debug logging' ]
  ],
  (options) => {
    app(options);
  }
  // Modifyer
  // (cli) => {
  //   //cli.command();
  // }
);
cli.parse();
